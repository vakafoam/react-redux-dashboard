{
  "extends": [
    "tslint:recommended",
    "tslint-react-hooks",
    "tslint-config-airbnb",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "defaultSeverity": "error",
  "jsRules": {},
  "rules": {
    "member-access": false,
    "ordered-imports": false,
    "quotemark": false,
    "no-console": false,
    "semicolon": false,
    "jsx-no-lambda": false,
    "import-name": [
      true,
      { "react": "React", "reactDom": "ReactDOM", "reduxThunk": "thunk" }
    ],
    "variable-name": [true, "allow-pascal-case"]
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": ["config/**/*.js", "node_modules/**/*.ts"]
  }
}
